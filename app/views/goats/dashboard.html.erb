<h1>Your profile</h1>

<div class="container">
  <h2>My Goats</h2>
  <div class="cards">
    <% @goats.each do |goat| %>
      <%= render "components/card_goat", goat: goat %>
    <% end %>
  </div>
</div>

<div class="container">
<h2>My Bookings</h2>
  <div class="cards">
    <% @bookings.each do |booking| %>
    <p><%= booking.start_date %></p>
      <% goat = booking.goat %>
      <%= render "components/card_goat", goat: goat%>
    <% end %>
  </div>
</div>
