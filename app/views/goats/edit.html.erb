<h1>Edit your Goat</h1>
<%= form_for(@goat) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :gender %>
  <%= f.text_field :gender %>
  <%= f.label :color %>
  <%= f.text_field :color %>
  <%= f.number_field :price %>
  <%= f.number_field :speed %>
    <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit %>
<% end %>
