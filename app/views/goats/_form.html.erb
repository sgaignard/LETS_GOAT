<%=simple_form_for @goat do |f| %>
  <%= f.input :name %>
  <%= f.input :gender, collection: ['Male', 'Female'] %>
  <%= f.input :color, label: 'Specie' %>
  <%= f.input :price %>
  <%= f.input :speed, label: 'Mowing speed (m2/day)'%>
  <%= f.input :description %>
  <%= f.input :photo, as: :file, error: 'Photo is mandatory, please upload one' %>
  <%= f.submit "Save your goat!", class: "btn btn-fluo" %>
<% end %>
